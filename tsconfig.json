{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "declaration": false,
    "typeRoots" : ["./types"],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es6", "dom", "es7", "es2017"]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
