    "@types/react-router": "4.0.30",
    "@types/react-router-dom": "4.3.0",
    "@types/recompose": "0.26.3",
    "@types/sinon": "5.0.5",
    "@types/styled-components": "4.1.4",
    "css-loader": "1.0.1",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "fetch-mock": "7.1.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "html-webpack-template": "6.2.0",
    "jest": "23.0.1",
    "jest-cli": "23.0.1",
    "jest-junit": "5.2.0",
    "sinon": "7.0.0",
    "style-loader": "0.23.1",
    "ts-jest": "23.10.5",
    "ts-loader": "4.5.0",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-config-standard": "7.1.0",
    "tslint-react": "3.6.0",
    "webpack": "4.28.2",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "dependencies": {
    "mobx": "5.8.0",
    "mobx-react": "5.4.3",
    "ramda": "0.26.1",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-redux": "5.1.1",
    "react-request": "3.1.2",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "recompose": "0.28.0",
    "semantic-ui-css": "2.4.1",
    "semantic-ui-react": "0.84.0",
    "spa-server": "1.0.0",
    "styled-components": "4.1.3",
    "typescript": "3.2.2",
    "typescript-fsa": "3.0.0-beta-2"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "setupTestFrameworkScriptFile": "<rootDir>tests/setup.ts",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
